    "styles": {
        "color": {
            "background": "var:preset|color|color-primary-00",
            "text": "#333333"
        },
        "typography": {
            "fontFamily": "var:preset|font-family|secondary-font",
            "fontWeight": "350"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var:preset|font-family|primary-font",
                    "letterSpacing": "-0.03rem",
                    "fontSize": "var:preset|font-size|extralarge"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var:preset|font-family|primary-font",
                    "letterSpacing": "-0.03rem",
                    "fontSize": "var:preset|font-size|small-large"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var:preset|font-family|primary-font",
                    "letterSpacing": "-0.03rem",
                    "fontSize": "var:preset|font-size|large-medium"
                }
            }
        },
        "spacing": {
            "blockGap": "1.5rem"
        },
        "blocks": {
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--grey-02)",
                    "text": "var(--wp--preset--color--grey-09)"
                },
                "border": {
                    "radius": "0.5rem"
                },
                "spacing": {
                    "padding": {
                        "top": "13px",
                        "right": "18px",
                        "bottom": "13px",
                        "left": "18px"
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            },
            "core/paragraph": {
                "typography": {
                    "lineHeight": "1.7",
                    "fontSize": "var:preset|font-size|base"
                },
                "spacing": {
                    "margin": {
                        "bottom": "24px"
                    }
                }
            },
            "core/post-title": {
                "typography": {
                    "fontSize": "var:preset|font-size|large"
                },
                "color": {
                    "text": "#333333"
                }
            },
            "core/post-excerpt": {
                "typography": {
                    "fontSize": "1rem"
                },
                "color": {
                    "text": "#666666"
                }
            },
            "core/post-date": {
                "typography": {
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "#999999"
                }
            },
            "core/post-featured-image": {
                "spacing": {
                    "margin": {
                        "bottom": "1rem"
                    }
                },
                "border": {
                    "radius": "8px"
                }
            },
            "core/list": {
                "spacing": {
                    "padding": {
                        "left": "var:preset|spacing|20"
                    }
                }
            },
            "core/list-item": {
                "typography": {
                    "lineHeight": "1.7",
                    "fontSize": "var:preset|font-size|base"
                },
                "spacing": {
                    "padding": {
                        "top": "15px"
                    }
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "landing",
